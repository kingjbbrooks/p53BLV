html
  head
    link(rel='stylesheet' href='./app.css')
    script(src='/socket.io/socket.io.js')
    title p53BLV

  body
    #home.ui.inverted.vertical.masthead.center.aligned.segment
      .ui.container
        .ui.large.secondary.inverted.pointing.menu
          a.item(href='#home') Home
          a.item(href='#search') Search

      .ui.text.container
        h1.ui.inverted.header p53BLV
        h2 Whole-Genome Binding Locations Viewer of Human p53
        a(href='#search')
          .ui.huge.primary.button Get Started #[i.right.arrow.icon]

    #search.ui.vertical.stripe.segment
      .ui.middle.aligned.stackable.grid.container
        .row
          .left.aligned.column
            a.ui.huge.header(href='#search') # Search
            table.ui.selectable.celled.table
              thead
                tr
                  th Dataset
                  th Cell Line
                  th TP53
                  th Treatment
                  th Reference
                  th GEO
              tbody
                script(type='x-tmpl-mustache')
                  | {{#db}}
                  tr
                    td {{dataset}}
                    td {{cellLine}}
                    td {{tp53}}
                    td {{treatment}}
                    td #[a(href='{{reference.href}}') {{reference.title}}]
                    td #[a(href='{{GEO.href}}') {{GEO.title}}]
                  | {{/db}}

    script(src='./app.js')
