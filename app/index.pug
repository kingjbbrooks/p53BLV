html
  head
    link(rel='stylesheet' href='./app.css')
    script(src='/socket.io/socket.io.js')
    title p53BLV

  body
    #home.ui.inverted.vertical.masthead.center.aligned.segment
      .ui.container
        .ui.large.secondary.inverted.pointing.menu
          a.navigator.active.item(data-hash='home') Home
          a.navigator.item(data-hash='search') Search

      .ui.text.container
        h1.ui.inverted.header p53BLV
        h2 Whole-Genome Binding Locations Viewer of Human p53
        .ui.huge.primary.button.navigator(data-hash='search') Get Started #[i.right.arrow.icon]

    #search.ui.vertical.stripe.segment
      .ui.middle.aligned.stackable.grid.container
        .row
          .left.aligned.column
            span.ui.huge.header.navigator(data-hash='search') # Search
            table.ui.definition.selectable.celled.table
              thead
                tr
                  th
                  th Dataset
                  th Gene List
                  th Cell Line
                  th TP53
                  th Treatment
                  th Reference
                  th GEO
              tbody
                script(type='x-tmpl-mustache')
                  | {{#db}}
                  tr
                    td.collapsing
                      .ui.fitted.slider.checkbox #[input(type='checkbox')] #[label]
                    td {{dataset}}
                    td.list.disabled
                      .ui.dropdown
                        .text(data-list-chosen='HOMER') #[i.dropdown.icon]
                        .menu.transition.slide.down.in
                          .item(data-list='HOMER') HOMER
                          .item(data-list='CLC') CLC
                          .divider
                          .item(data-list='INTERSECTION') INTERSECTION
                          .item(data-list='UNION') UNION
                    td {{cellLine}}
                    td {{tp53}}
                    td {{treatment}}
                    td #[a(href='{{reference.href}}') {{reference.title}}]
                    td #[a(href='{{GEO.href}}') {{GEO.title}}]
                  | {{/db}}

    script(src='./app.js')
